<% content_for :page_style_sheet do %>
  <%= stylesheet_link_tag "trip-page.css", "data-turbo-track": "reload" %>
<% end %>

<div id="<%= dom_id trip %>">

  <div class="content">

    <h1>
      <strong>Title:</strong>
      <%= trip.title %>
    </h1>

    <p>
      <strong>Subtitle:</strong>
      <%= trip.subtitle %>
    </p>

    <p>
     <strong>Defaultprice:</strong>
      <%= trip.defaultprice %>
    </p>

    <p>
     <strong>Meet:</strong>
     <%= trip.meet %>
    </p>

    <p>
     <strong>Depart:</strong>
      <%= trip.depart %>
    </p>

    <p>
     <strong>Terrain:</strong>
     <%= trip.terrain %>
    </p>

    <p>
      <strong>Intro:</strong>
      <%=simple_format trip.intro %>
    </p>

    <p>
      <strong>Key words:</strong>
      <%= trip.key_words %>
    </p>

    <p>
      <strong>Large map image:</strong>
     <%= image_tag trip.large_map_image, alt: trip.large_map_alt %>
    </p>

   <p>
     <strong>Large map alt:</strong>
      <%= trip.large_map_alt %>
    </p>

    <p>
     <strong>Main photo alt:</strong>
     <%= trip.main_photo_alt %>
    </p>



    <p>
     <strong>Thumbnail photo alt:</strong>
     <%= trip.thumbnail_photo_alt %>
    </p>

    <p>
      <strong>Highlights:</strong>
     <%= simple_format(trip.highlights) %>
    </p>

    <p>
      <strong>Main image:</strong>
      <%= trip.main_image %>
    </p>

  </div>

  <% @trip.lodgings.each do |lodge| %>
    <div class="lodge">
      <h2><%= lodge.name %> (<%= lodge.location %>)</h2>
      <p><%= simple_format lodge.description %></p>
      <%= image_tag lodge.photo, alt: lodge.photo_alt %>
    </div>
  <% end %>

  <div class ="destination">
  <h3>Destinations:
  
  <% @trip.destinations.each do |destination| %>
    <%= destination.name %>
  <% end %>

  </h3>

  <table>
  <div class="table">
    <table border="5" cellpadding="5" cellspacing="0">
    <tr>
      <th>Departure Date</th>
      <th>Return Date</th>
      <th>Price</th>
      <th>Difficulty Level</th>
    </tr>
    
    <% @trip.departures.each do |departure| %>
      <tr>
        <td><%= departure.departure_date %></td>
        <td><%= departure.return_date %></td>
        <td><%= departure.price %></td>
        <td><%= departure.difficulty_level %></td>
      </tr>
    <% end %>
  </div>
  </table>

  </div>


</div>


